#include <stdio.h>

int powah(x,n);

int main()
{
    int i,a,b;

    printf("Informe o Valor de X:");
    scanf("%d",&a);
    printf("Informe o Valor de N:");
    scanf("%d",&b);
    powah(a,b);
    printf("O valor de X elevado a N e: %d",powah(a,b));


}
int powah(x,n)
{
    int z=0,i;
    z=x;
    for(i=0; i<n-1; i++)
    {
        z=z*x;
    }

    return z;
}






/////// versao 2 



#include <stdio.h>

void potencia(int base, int elevado)
{
    int resultado=1,i;
    for (i=0; i<elevado; i++)
    {
        resultado=resultado*base;
    }
    printf("O resultado e %d",resultado);
}
int main()
{
    int x,n;
    printf("Insira o valor da base: ");
    scanf("%d",&x);
    printf("Insira o valor do expoente: ");
    scanf("%d",&n);
    potencia(x,n);
}

