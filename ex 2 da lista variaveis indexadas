// Todo o c√≥digo e feito em C.
// Feito para guardar o aprendizado
// Objetivo: Fazer um conjunto B em que contenha os respectivos elementos de A multiplicados por 3. 

#include <stdio.h>
#define tam 5

int main()
{
    int i;
    int A[5]= {0,0,0,0,0};
    int B[5]= {0,0,0,0,0};
    for(i=0; i<tam; i++)
    {
        printf("Informe o valor de A[%d]: ",i+1);
        scanf("%d",&A[i]);
    }
    i=0;
    for(i=0; i<tam; i++)
    {
        printf("O valor de A[%d] e: %d\n",i+1,A[i]);
    }
    i=0;
    for(i=0; i<tam; i++)
    {
        B[i]=A[i]*3 ;
    }
    i=0;
    
    printf("\n\n");
    
    for(i=0; i<tam; i++)
    {
        printf("O elemento B[%d] e : %d\n",i+1,B[i]);
    }
    return 0;
}
